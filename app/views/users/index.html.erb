<div class="container-fluid">
		<h1 id="SFUCompanion">SFU Companion</h1>
		<hr id="gradient">
	<div class="row">
		<div class="col-md-5  left-side">
			<div class="nav pull-right">
				<div class = "Login">
					
					<% if current_user %> 
			              <ul> 
			                <li><%= current_user.email %></li> 
			                <li><%= link_to "Log out", logout_path, method: "delete" %></li> 
			              </ul> 
			          <% else %> 
			            <ul> 
			              	<h4> Get started </h4><br><br><br><br>
							<%= link_to "Login", 'login', id: "Login_btn" %><br>
							<%= link_to "Signup", 'signup', id: "Signup_btn" %>
			            </ul> 
			          <% end %>  
				
				</div>
			</div>
		</div>

		<div class="col-md-7  right-side">
			
				<h4> Guest Modules </h4>
				<img src="/assets/courses.png" class = "fade"><img src="/assets/library.png" class = "fade"><img src="/assets/maps.png" class = "fade">
			
		</div>
	</div>
</div>



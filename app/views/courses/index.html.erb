<h2>Course Search</h2>

<% #course search form %>
<% #post params to /course_search %>
<%= form_tag('/course_search', :method => 'post') do %>

    <% #search by year, term, course name and number %>
    <label for="course_year">Course Year</label>
    <%=text_field_tag 'course_year', '2016' %>
    <br>
    <label for="course_term">Course Term</label>
    <%=text_field_tag 'course_term', 'Fall' %>
    <br>
    <label for="course_name">Course Name</label>
    <%=text_field_tag 'course_name', 'CMPT' %>
    <br>
    <label for="course_number">Course Number</label>
    <%=text_field_tag 'course_number', '276'%>
    
    <div><%= submit_tag 'Search' %></div>
<% end %>


<% #course can be added into my course list %>
<h2>My Courses:</h2>
<% current_user.courses.each do |course| %>
<table border= "solid">
  <tr>
    <td>
	    <%= course.c_name %>
	    <%= course.c_number %>
	    <%= course.c_section %>
	  </td>
	</tr>
	<tr>
	  <td>
	    Schedule:
	    <%= course.c_time %>
	    <%= course.c_location %>
	    <br>
	    Exam:
	    <%= course.c_examTime %>
	    <%= course.c_examLocation %>
	    <%= button_to "Delete", [course.user, course], method: :delete, data: { confirm: "Are you sure?" } %>
		</td>
	</tr>
</table>
<% end %>

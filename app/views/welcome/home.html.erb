<!DOCTYPE html>
<html>
<head>
	<title>Home Page</title>
	<%= stylesheet_link_tag('home', :media=>'all')%>
</head>

<body>
	<h1 id ="Welcome">Welcome <%= current_user.first_name%></h1><hr id="gradient">
	<h2 id="user"></h2>
	

	<% if current_user %>
    	<%= link_to "Logout", logout_path, class: "logoutbutton", method: "delete" %>
		<% if current_user.email == "admin@email.com" %>	
			<%= link_to "Settings", 'admin', class: "adminbutton" %>
		<% end %>	
    <% end %>
	<div id="Modules">
		<img src="/assets/shoutouts.png" class = "fade"><img src="/assets/courses.png" class = "fade"><img src="/assets/library.png" class = "fade"><img src="/assets/maps.png" class = "fade">
		<img src="/assets/social.png" class = "fade"><img src="/assets/calendar.png" class = "fade"><img src="/assets/transit.png" class = "fade">
	</div>
	<div id="footer">
	Logged in as 
	<%= current_user.email %>
</div>

</body>

</html>
